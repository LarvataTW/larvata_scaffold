<%= "<%= simple_form_for(#{admin? ? '[:admin, @' + singular_name + ']' : '@' + singular_name}, html: { multipart: true }) do | f | %%>" %>
    <%= editable_attributes_and_except_sorting.map{ |attr| 
            component = "<div class='form-group'>\n        "
            component += "<label class='col-sm-2 control-label'><%= #{class_name}.human_attribute_name('#{attr.name}') %%></label>\n        "
            component += "<div class='col-sm-10'>\n            " 

            # 針對不同資料型態會呈現出不同的元件
            if attr.type == "string"
                if is_enum? attr
                    component += "<%= f.input_field :#{attr.name}, collection: #{class_name}.#{attr.name.pluralize}_i18n, class: 'form-control' %%>\n            "
                else
                    component += "<%= f.input_field :#{attr.name}, class:'form-control' %%>\n            " 
                end
            elsif attr.type == "text"
                component += "<%= f.input_field :#{attr.name}, class:'form-control floara-editor' %%>\n            " 
            elsif attr.type == "datetime"
                component += "<%= f.input_field :#{attr.name}, as: :string, class:'form-control datetimepicker' %%>\n            " 
            elsif attr.type == "boolean"
                component += "<%= f.select :#{attr.name}, [[t('helpers.select.true_option'), true],[t('helpers.select.false_option'), false]] %%>\n            " 
            elsif attr.type == "integer" 
                if is_enum? attr
                    component += "<%= f.input_field :#{attr.name}, collection: #{class_name}.#{attr.name.pluralize}_i18n, class: 'form-control' %%>\n            "
                else
                    component += "<%= f.input_field :#{attr.name}, class:'form-control' %%>\n            " 
                end
            end

            component += "<%= f.full_error :#{attr.name}, class: 'full_error' %%>\n        " 
            component += "</div>\n        "
            component += "<div class='clear'></div>\n   " 
            component += "</div>"
            component 
        }.join("\n    ") 
    %>

    <%= "<%= f.submit t('button.save'), class: 'an-btn an-btn-primary' %%>" %>
    <%= "<%= link_to t('button.back'), #{'admin_' if admin?}#{plural_name}_path, class: 'an-btn an-btn-default' %%>" %>
<%= "<% end %%>" %>

<%= "<%= content_for :post_scripts do %%>" %>

<%= "<% end %%>" %>
